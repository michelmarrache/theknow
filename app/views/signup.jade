	head
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-touch-fullscreen", content="yes")
		link(rel="shortcut icon", href="/favicon.ico")

		title Sign Up
		meta(name="description", content="")
		meta(name="keywords", content="")

		link(rel='stylesheet', href='/css/reset.css')
		link(rel='stylesheet', href='/css/normalize.css')
		link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bootstrap/css/font-awesome.min.css')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,800,700')
		link(rel='stylesheet', href='/css/default.css')
		link(rel='stylesheet', href='/css/responsive.css')

		script(src='/js/libs/custom.modernizr.js')
		script(src='/js/libs/jquery-1.8.1.min.js')
		script(src='/js/libs/easing.js')

		//if IE
			link(rel='stylesheet', href='/css/ie.css')
			script(src='/js/respond.min.js')

		script.
			$(function(){
				if ("ontouchstart" in document.documentElement){
					$('meta[name=viewport]').remove();
					if (window.screen.width <= 720 || window.screen.height <= 720) {
						$('head').append( '<meta name="viewport" content="width=540, initial-scale=1.0">' );
					}
				};
			});
	body
		.container(style="max-width:600px")
			form#signup.form-signin(action="/signup", method="post")
				.row
					.col-sm-12
						.page-header.text-center
							p
								img(src="/images/logo.png", alt="kabookaboo logo")
				.row
					.col-sm-12.text-center
						h1 Sign Up
						p &nbsp;
				.row
					.col-sm-12
						.form-group
							input.form-control(type="text", name="email", placeholder="Username", autofocus)
				.row
					.col-sm-12
						.form-group
							input.form-control(type="password", name="password", placeholder="Password")				
				//
					label.checkbox
						input(type="checkbox", value="remember-me") Remember me
				.row
					.col-sm-12
						.form-group.text-center
							input.btn.btn-lg.btn-danger(type="button", value="Cancel", onclick="window.location='/login'")
							input.btn.btn-lg.btn-info(type="submit", value="Sign Up")

				footer
					.row
						.col-sm-12.text-center
							hr
							p
								&copy;
								script.
									document.write((new Date).getFullYear())
								| &nbsp; kabookaboo Marketing

		script(src='bootstrap/js/bootstrap.min.js')
		script(src='/js/script.js')
		script(src='/js/google.analytics.js')
		
